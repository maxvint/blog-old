.home-inner
  margin 0 auto
  width 1080px

.home-content
  display table
  background url(/img/line.gif) center repeat-y
  .home-post
    position relative
    width 46%
    .inner
      padding 40px
      max-width 400px
      min-height 200px
      overflow hidden
      background rgba(255,255,255,0.9)
    .more
      display inline-block
      margin 20px 0 0 0
      padding 10px 30px
      border 2px solid color-link
      border-radius 50px
      font-size 14px
      &:hover
        color color-font
        border-color color-font
        text-decoration none
  .even
    float left
    &:after
      position absolute
      left 100%
      top 10%
      margin-top -10px
      content ""
      height 0
      width 0
      pointer-events none
      border solid transparent
      border-color rgba(255, 255, 255, 0)
      border-left-color #fff
      border-width 10px
      @media screen and (max-width: 600px)
        border none
  .odd
    float right
    margin -220px 0 0 0
    @media screen and (max-width: 600px)
      float left
      margin 20px 0
    &:after
      position absolute
      right 100%
      top 10%
      margin-top -10px
      content ""
      width 0
      height 0
      pointer-events none
      border solid transparent
      border-color rgba(255, 255, 255, 0)
      border-right-color #fff
      border-width 10px
      @media screen and (max-width: 600px)
        border none

.blog-tagline
  margin 0 auto 40px
  display block
  width 380px
  height 1px
  background #fff
  @media screen and (max-width: 600px)
    display none

#pagination
  display inline-block
  margin 60px 0 0 0
  width 100%
  a
    display block
    padding 20px
    width 42%
    background color-border
    border-radius 5px
    color #fff
    font-family font-title
    text-shadow 0 0 1px #fff
    text-align center
    margin-bottom 50px
    &:hover
      background color-link
      color #fff
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon